{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {}
    }
  },
  "yaml.format.enable": false,
  "yaml.schemaStore.enable": true,
  "yaml.schemas": {
    "kubernetes": ".kubernetes/**/*.yaml"
  }
}
